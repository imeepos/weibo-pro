{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    ".env.local"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    }
  }
}
