{
  "extends": "@sker/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@sker/ui/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/lib/**/*", "src/styles/**/*"],
  "exclude": ["node_modules", "dist"]
}
