{
  "extends": "@sker/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": false,
    "declaration": false,
    "declarationMap": false,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@sker/ui/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
