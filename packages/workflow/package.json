{
  "name": "@sker/workflow",
  "version": "0.0.0",
  "private": true,
  "description": "Workflow engine and orchestration utilities for Sker applications.",
  "keywords": [
    "workflow",
    "orchestration",
    "sker"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "claude": "claude --dangerously-skip-permissions",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit && tsc --project tsconfig.test.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:weibo-login": "vitest run WeiboLoginAst.test.ts TextAreaAst.comprehensive.test.ts WeiboLoginWorkflow.integration.test.ts WeiboLoginWorkflow.json.test.ts",
    "test:unit": "vitest run WeiboLoginAst.test.ts TextAreaAst.comprehensive.test.ts",
    "test:integration": "vitest run WeiboLoginWorkflow.integration.test.ts WeiboLoginWorkflow.json.test.ts",
    "main": "tsx src/main.ts"
  },
  "dependencies": {
    "@sker/core": "workspace:*",
    "dayjs": "^1.11.19",
    "json-schema": "^0.4.0",
    "rxjs": "^7.8.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@sker/eslint-config": "workspace:*",
    "@sker/typescript-config": "workspace:*",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^22.15.3",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.38.0",
    "tsup": "^8.4.0",
    "typescript": "5.9.2",
    "vitest": "^2.1.9"
  }
}