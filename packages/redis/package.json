{
  "name": "@sker/redis",
  "version": "0.0.0",
  "private": true,
  "description": "Redis client wrapper with dependency injection support for Sker applications.",
  "keywords": ["redis", "ioredis", "cache", "sker"],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./src/index.ts",
  "main": "./src/index.ts",
  "sideEffects": false,
  "scripts": {
    "claude": "claude --dangerously-skip-permissions",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@sker/core": "workspace:*",
    "ioredis": "^5.8.1"
  },
  "devDependencies": {
    "@sker/eslint-config": "workspace:*",
    "@sker/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.38.0",
    "typescript": "5.9.2"
  }
}
