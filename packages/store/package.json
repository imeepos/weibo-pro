{
  "name": "@sker/store",
  "version": "0.0.0",
  "private": true,
  "description": "Framework-agnostic state management library inspired by NgRx Store.",
  "keywords": ["state-management", "redux", "rxjs", "store", "sker"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@sker/eslint-config": "workspace:*",
    "@sker/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.38.0",
    "tsup": "^8.4.0",
    "typescript": "5.9.2",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "rxjs": "^7.8.1",
    "tslib": "^2.0.0"
  }
}
