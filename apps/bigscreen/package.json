{
  "name": "@sker/bigscreen",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite --port 8087",
    "build": "vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-checks": "tsc --noEmit",
    "preview": "vite preview"
  },
  "dependencies": {
    "@sker/core": "workspace:*",
    "@sker/sdk": "workspace:*",
    "@sker/ui": "workspace:*",
    "@sker/entities": "workspace:*",
    "@sker/workflow": "workspace:*",
    "@sker/workflow-ast": "workspace:*",
    "@sker/workflow-ui": "workspace:*",
    "@sker/workflow-browser": "workspace:*",
    "@types/three": "^0.181.0",
    "axios": "1.7.9",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.555.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-force-graph-3d": "^1.29.0",
    "react-router-dom": "^6.29.0",
    "reactflow": "^11.11.4",
    "reflect-metadata": "^0.2.2",
    "recharts": "^2.8.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.0.0",
    "three": "^0.181.1",
    "web-vitals": "^5.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@sker/eslint-config": "workspace:*",
    "@sker/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.3.1",
    "vite-plugin-swc-transform": "^1.1.1",
