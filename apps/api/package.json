{
  "name": "@sker/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "dev:debug": "nest start --watch --debug",
    "dev:legacy": "nest start --watch --preserveWatchOutput",
    "build": "nest build",
    "start": "node dist/main.js",
    "start:prod": "node dist/main",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop sker-api",
    "pm2:restart": "pm2 restart sker-api",
    "pm2:delete": "pm2 delete sker-api",
    "pm2:logs": "pm2 logs sker-api",
    "pm2:monit": "pm2 monit",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "postinstall": "pnpm exec playwright install"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^11.1.8",
    "@nestjs/websockets": "^11.1.8",
    "@sker/agent": "workspace:*",
    "@sker/core": "workspace:*",
    "@sker/entities": "workspace:*",
    "@sker/sdk": "workspace:*",
    "@sker/mq": "workspace:*",
    "@sker/redis": "workspace:*",
    "@sker/workflow": "workspace:*",
    "@sker/workflow-ast": "workspace:*",
    "@sker/workflow-run": "workspace:*",
    "dotenv": "^16.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@sker/eslint-config": "workspace:*",
    "@sker/typescript-config": "workspace:*",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.9.3",
    "@types/node": "^22.15.3",
    "eslint": "^9.38.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "5.9.2"
  }
}
