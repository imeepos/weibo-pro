{
  "name": "sker",
  "private": true,
  "scripts": {
    "claude": "claude --dangerously-skip-permissions",
    "build": "turbo run build",
    "build:force": "turbo run build --force --no-cache",
    "build:deps": "pnpm run -r --filter=\"./packages/*\" build",
    "dev": "turbo run dev --concurrency=20",
    "dev:robust": "./scripts/ensure-deps-built.sh && turbo run dev --concurrency=20",
    "dev:clean": "./scripts/dev-with-port-guardian.sh",
    "port:guardian": "./scripts/port-guardian.sh",
    "storybook": "turbo run dev --filter=@sker/storybook",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "ensure-deps": "./scripts/ensure-deps-built.sh"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "better-auth": "^1.4.5",
    "pg": "^8.16.3"
  },
  "pnpm": {
    "overrides": {
      "csstype": "^3.2.3",
      "@types/react": "^19.0.0"
    }
  }
}
